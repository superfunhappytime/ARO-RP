    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch via NPM",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "start"
            ],
            "env": {
                "HTTPS": "true"
            },
            "port": 9229,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "url": "https://localhost:3000",
            "webRoot": "${workspaceFolder}/src",
            "sourceMapPathOverrides": {
                "webpack:///src/*": "${webRoot}/*"
            },
        },
        // {
        //     "type": "firefox",
